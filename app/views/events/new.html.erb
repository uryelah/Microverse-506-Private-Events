<h1>New Event</h1>
<p>Find me in app/views/users/new.html.erb</p>

<%= form_for :event, url: '/events' do |f| %>
  <fieldset>
    <div>    
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>
    <div>
      <%= f.label :location %>
      <%= f.text_area :location %>
    </div>
  </fieldset>
  <%= f.submit 'Submit event' %>
<% end %>
<%= link_to 'Back', events_path %>